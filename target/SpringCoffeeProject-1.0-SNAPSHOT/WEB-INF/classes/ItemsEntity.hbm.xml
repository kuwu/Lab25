<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.test.models.ItemsEntity" table="items" schema="CoffeeShopDatabase">
        <id name="itemId">
            <column name="ItemID" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="Name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="descript">
            <column name="Descript" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="quanity">
            <column name="Quanity" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="price">
            <column name="Price" sql-type="decimal(2)" precision="2"/>
        </property>
    </class>
</hibernate-mapping>